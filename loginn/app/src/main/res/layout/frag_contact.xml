<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/lightbur"
    android:fitsSystemWindows="true"
    tools:context=".ContactDe">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="30dp"
        android:paddingRight="24dp"
        android:paddingBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tvEnterContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:ems="30"

            android:background="@color/bur"
            android:text="Enter Emergency Contact Details"
            android:textColor="@color/white"
            />
        <EditText
            android:id="@+id/etCN1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/bur"
            android:hint="WhatsApp/Contact Name"
            />

        <EditText
            android:id="@+id/etC1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/bur"
            android:hint="      Contact no. 1"
            android:drawableLeft="@drawable/contact_icon"
            />
        <EditText
            android:id="@+id/etCN2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/bur"
            android:hint="      Second Contact Name"

            />

        <EditText
            android:id="@+id/etC2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/bur"
            android:hint="      Contact no. 2"
            android:drawableLeft="@drawable/contact_icon"
            />
        <EditText
            android:id="@+id/etCN3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/bur"
            android:hint="      Third Contact Name"

            />
        <EditText
            android:id="@+id/etC3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/bur"
            android:hint="      Contact no. 3"
            android:drawableLeft="@drawable/contact_icon"
            />
        <Button
            android:id="@+id/btnContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="5dp"
            android:text="SAVE"
            android:textSize="20dp"
            android:textStyle="bold">
        </Button>
        <Button
            android:id="@+id/btnRetrive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="1dp"
            android:text="Show Details"
            android:textSize="10dp"
            android:textStyle="bold">
        </Button>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>